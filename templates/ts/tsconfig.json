{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": false, // enable if you want vite to warn you when you have unused methods
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": ["./src"]
}
