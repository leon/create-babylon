  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES2021",

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,

    "outDir": "dist",
    "rootDir": "."
  },
  "exclude": ["templates"]
}
