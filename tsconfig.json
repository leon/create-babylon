{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,

    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": "."
  },
  "exclude": ["dist", "templates"]
}
